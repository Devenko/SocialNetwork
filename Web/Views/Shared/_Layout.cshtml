<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <div id="logo">
                <h1>
                    <a href="#">Социальная сеть</a></h1>
            </div>
            <div id="slogan">
                <h2>
                    Всегда оставайтесь на связи</h2>
            </div>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div id="menu">
                <ul>
                    <li class="first current_page_item">@Html.ActionLink("Моя страница", "Index", "Home")</li>
                    <li>@Html.ActionLink("Мои друзья", "Index", "Friends")</li>
                    <li>@Html.ActionLink("Мои сообщения", "Index", "Messages")</li>
                    <li>@Html.ActionLink("Поиск", "Index", "Search")</li>
                    <li class="last">@Html.ActionLink("Выход", "Logout", "Account")</li>
                </ul>
                <br class="clearfix" />
            </div>
        }
        <div id="page">
            <div id="content">
                @RenderBody()
                <br class="clearfix" />
            </div>
            <br class="clearfix" />
        </div>
        <div id="page-bottom">
            <div id="page-bottom-content">
                <h3>
                    Место для рекламы</h3>
                
            </div>
            <br class="clearfix" />
        </div>
    </div>
    
</body>
</html>
